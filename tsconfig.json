{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "pretty": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "outDir": "dist/bin",
    "rootDirs": ["src", "test"],
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": ["node_modules/*"],
      "../*": ["src/*"]
    }
  },
  "lib": ["es6", "dom"],
  "include": ["index.ts", "src/**/*", "test/**/*"],
  "exclude": ["src/client", "node_modules", ".vscode", "dist"]
}
